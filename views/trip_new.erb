<form action="/trip" method="post">

    <h3>Create a new Trip listing :</h3>
        <br>
  <label for="">Trip name :</label>
  <input name="trip_name" type="text">
    <br><br>
  <label for="">Destination country :</label>
  <input name="dest_country" type="text">
  <br><br>
  <label for="">Start month :</label>
  <select class="" name="month">
      <option value="" disabled selected>choose an option</option>
      <option value="jan">January</option>
      <option value="feb">February</option>
      <option value="mar">March</option>
      <option value="apr">April</option>
      <option value="may">May</option>
      <option value="jun">June</option>
      <option value="jul">July</option>
      <option value="aug">August</option>
      <option value="sep">September</option>
      <option value="oct">October</option>
      <option value="nov">November</option>
      <option value="dec">December</option>
        </select>
  <br><br>
  <label for="">Your Trip Owl's gender :</label>
  <select class="" name="gender">
  <option value="" disabled selected>choose an option</option>
  <option value="male">Male</option>
  <option value="female">Female</option>
    </select>
  <br><br>
  <label for="">Age group :</label>
  <select class="" name="age_group">
      <option value="" disabled selected>choose an option</option>
      <option value="18-21">18 - 21</option>
      <option value="21-30">21 - 30</option>
      <option value="31-40">31 - 40</option>
      <option value="41-50">41 - 50</option>
      <option value="51-65">51 - 65</option>
      <option value="65+">65+</option>
  </select>
  <br><br>
  <label for="">Trip info :</label>
  <textarea name="body" rows="8" cols="40"></textarea>
  <br><br>
  <input type="hidden" name="user_id" value="<%= session[:user_id] %>">
  <br><br>
  <button class="button">CREATE TRIP!</button>

</form>
